	<logger name="org.jactr.io.activator">
      <level value="debug"/>
    </logger>
	
	<logger name="org.jactr.launching">
      <level value="debug"/>
    </logger>

	    
	<root>
	   <level value="debug"/>
        <appender-ref ref="CONSOLE"/>
		<appender-ref ref="DebugFileAppender"/>
	</root>
</log4j:configuration>